<project name="com.google.gdt.eclipse.login.test"
         default="build"
         basedir=".">

    <!-- Project-specific properties -->
    <property name="plugin_name"
              value="com.google.gdt.eclipse.login.test" />
    <property name="host.plugin.name"
              value="com.google.gdt.eclipse.login" />

    <property name="project.tail" value="plugins/${plugin_name}" />

    <path id="plugin.src">
        <pathelement location="${gwt.plugin.root}/plugins/com.google.gdt.eclipse.login.test/src" />
    </path>

    <import file="${internal.project.dir}/common.ant.xml" />
    <import file="${internal.project.dir}/plugins/test.plugins.common.ant.xml" />

    <target name="build">
        <copy.plugin.src />
        <gwt.plugin.eclipseantrunner builddir="."
                                     buildfile="build.xml"
                                     buildtarget="buildInEclipse" />
    </target>

</project>